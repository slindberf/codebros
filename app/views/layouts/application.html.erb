<!DOCTYPE html>
<html>
  <head>
    <title>Codebros</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header-navbar">
      <div class="container">
        <h1><a class="logo" href="http://codebros.herokuapp.com/">Code Bros</a></h1>
        <nav>
          <% if user_signed_in? %>
          
            <li><%= link_to "Home", root_path %></li>
            <li><%= link_to "Profile", show_user_path %></li>
            <li><%= link_to "Projects", projects_index_all_path %></li>
            <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
            <li><%= link_to current_user.name, show_user_path %></li>
          <% else %>
            <li><%= link_to "Sign Up", new_user_registration_path %></li>
            <li><%= link_to "Log In", new_user_session_path %></li>
          <% end %>
        </nav>


      </div>
      
      
    </header>
  	
    <%= yield %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </body>
</html>
