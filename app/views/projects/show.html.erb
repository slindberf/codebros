		<h2><%=@project.name%></h2>
	</div>
	<div class='col col-3'></div>
</div>

		
<section class='center white'>
	<div class='row'>
		<div class='col col-3'></div>
		<div class='col col-6'>
			<div class='project-wrapper'>
				<h3><%=@project.project_type%></h3>
				<p><%= current_user.city %></p>
		 		<p><%= @project.purpose %></p>
		 		<div class='description'>
		 			<p><%= @project.description %></p>
		 		</div>
			</div>
		</div>
		<div class='col col-3'>
			<div class='admin'>
				<p>
					<span>*</span>
					Admin:
				</p>
				<div>
					<img src="" alt="foto">
					<p><%= @name %></p>
				</div>
			</div>
		</div>
	</div>

</section>


<!-- 
