<%= render :partial => "projects/nav_projects" %>

<div class="border-form-div">
<h1>New Project</h1>

<%= form_for @project, url: create_project_path do |f| %>

  <br><br><br><br><br><br><br>
	<div class="field">
    <%= f.label :project_type %><br />
    <%= f.text_field :project_type %>
  </div>

	<div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
	<div class="field">
    <%= f.label :purpose %><br />
    <%= f.text_field :purpose %>
  </div>
	<div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, size: '40x10' %>
    <!-- para cambiar tamaÃ±o size: '30x50' columns and row -->
  </div>

  <div class="field">
    <%= label_tag :category %><br />
    <%= select_tag(:category,options_for_select([['Back-end', 'Back-end'], ['Front-end', 'Front-end'], ['Full-stack','Full-stack']]) ) %>
  </div>
	<br>
	<div class="actions">
    <%= f.submit 'Create' %>
  </div>
<% end %>


</div>