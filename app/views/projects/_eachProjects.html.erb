<div class="table-projects">
	
	<% @projects.each do |project| %>
		<div class="one-project">
			<div class="project-img">
				<%= link_to "/projects/#{project.id}" do %>
					<%= image_tag('project' + ((project.id%3)+1).to_s + '.png') %>
				<% end %>
			</div>
			<div class="project-name">
				<h4><%= project.name %></h4><span id="triangle-bottomleft"></span>
			</div>
		  <p>Type: <%= project.project_type %></p>
		  <p>Main purpose: <%= project.purpose %></p>
		</div>
	<% end %>

</div>

<div class="paginate">
	<%= will_paginate @projects %>
</div>



