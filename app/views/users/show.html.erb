<%= render :partial => "users/nav_users" %>
<section class="separator-u"></section>
<section class="p-edit">
  <div class="p-wraper">
    <div class="p-container">
      
               
          
        <!--form-->
        
          <div class="u-form">
            <div class="u-form-header">
              <p>Profile: <%= current_user.name %></p>
               <%= link_to "Edit Profile", user_registration_path, method: :patch, class:"u-btn u-btn-block"  %>
            </div>
            <div class="u-body">
               <div class="u-left">
                 <div class=user-img> 
                  <%=image_tag("user-default.png", alt: "Example Image")%>
                </div>
               </div>
               <div class="u-right">

                <div class="general">
                  <p class="u-header">General</p>
                  <hr>
                  <p>Name: <span><%= current_user.name %></span></p>
                  <hr>
                  <p>Email: <span><%= current_user.email %></span></p>
                  <hr>
                  <p>Member since: <span><%= current_user.created_at.strftime("%d %b. %Y") %></span></p>
                  <hr>
                  <p>City: <span><%= current_user.city %></span></p>
                  <hr>
                  <p class="u-header">About you!</p>
                  <hr>
                  <p><%= current_user.about %></p>
              
               </div><!--u-right-->
                <% current_user.skills.each do |skill| %>
                    <div class="skills-u">
                       <p class="u-skill"><%= skill.name %></p>
                    <%= button_to "X", remove_skill_path(skill.id), method: :delete, class:'btn-u' %>
                    </div>
                   
                    <% end %>
            </div><!--p-body-->
          </div><!--form-->

        
      
    </div><!--p-container-->
  </div><!--p-wraper-->
</section> 
<section class="separator-u"></section>

    

